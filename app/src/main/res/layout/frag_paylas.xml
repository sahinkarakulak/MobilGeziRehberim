<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_paylas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_paylasResimSec"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:padding="40dp"
                android:layout_marginBottom="20dp"
                android:onClick="img_paylasResimSec"
                android:src="@drawable/ic_photo_select" />

            <EditText
                android:id="@+id/edt_paylasYerIsmi"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Yer İsmi"
                android:inputType="text"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edt_konum"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:hint="Konum"
                android:inputType="text"
                android:maxLength="140"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/konum_sec"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="20dp"
                    android:text="Konum Seç"
                    android:background="@drawable/bg_button"/>

                <Button
                    android:id="@+id/konumumu_al"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Konumumu Al"
                    android:background="@drawable/bg_button"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edt_paylasYorum"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Yorum"
                android:maxLength="140"
                android:maxLines="5" />

            <Button
                android:id="@+id/btn_paylasGonder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_button"
                android:onClick="btn_paylasGonder"
                android:text="gönder" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>