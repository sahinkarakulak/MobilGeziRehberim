<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ss_bg"
    android:gravity="center"
    android:padding="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.mrcaracal.activity.AccountCreateActivity">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#E8161717"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <!--<ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/mrl"/>-->

            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Girmiş olduğunuz E-Posta adresine doğrulama bağlantısı gidecektir."
                        android:padding="15dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal" />

                    <EditText
                        android:id="@+id/edt_userName"
                        android:background="@drawable/bg_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kullanıcı Adı"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/edt_userEmail"
                        android:background="@drawable/bg_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-Posta"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/edt_userPassOne"
                        android:background="@drawable/bg_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Parola"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/edt_userPassTwo"
                        android:background="@drawable/bg_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Parola Tekrar"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:layout_marginBottom="10dp"/>

                    <Button
                        android:onClick="btn_createAccount"
                        android:background="@drawable/bg_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Hesabı Oluştur"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>